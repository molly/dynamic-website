mixin icon(name)
  case name
    when 'twitter'
      include ../../icons/twitter.svg
    when 'mastodon'
      include ../../icons/mastodon.svg
    when 'bluesky'
      include ../../icons/bluesky.svg
    when 'threads'
      include ../../icons/threads.svg
    when 'tiktok'
      include ../../icons/tiktok.svg
    when 'youtube'
      include ../../icons/youtube.svg
    when 'tv'
      include ../../icons/tv.svg
    when 'newspaper'
      include ../../icons/newspaper.svg
    when 'speaker'
      include ../../icons/speaker.svg
    when 'chat'
      include ../../icons/chat.svg
    when 'comment'
      include ../../icons/comment.svg